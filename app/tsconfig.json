{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "xpm/*": ["src/*"]
    },
    "target": "ES2015",
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "types": ["svelte"],
    "lib": ["es2020", "DOM"],
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/node_modules/*", "scripts/*"]
}
